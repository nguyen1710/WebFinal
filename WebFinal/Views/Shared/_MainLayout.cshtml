
@{
    ViewBag.Title = "_MainLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

    <title>Hệ Thống Phân Phối Thiết Bị Di Động BellPhoneX</title>

    <!-- Loading third party fonts -->
    <link href="http://fonts.googleapis.com/css?family=Roboto:100,300,400,700|" rel="stylesheet" type="text/css">
    <link href="~/Asset/fonts/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Asset/fonts/lineo-icon/style.css" rel="stylesheet" type="text/css">

    <!-- Loading main css file -->
    <link rel="stylesheet" href="~/Asset/style.css">

    <!--[if lt IE 9]>
    <script src="js/ie-support/html5.js"></script>
    <script src="js/ie-support/respond.js"></script>
    <![endif]-->

</head>


<body class="slider-collapse">

    <div id="site-content">
        <div class="site-header">
            <div class="container">
                <a href="index.html" id="branding">
                    <img src="images/logo.png" alt="" class="logo">
                    <div class="logo-text">
                        <h1 class="site-title">BellphoneX</h1>
                        <small class="site-description">Chuyên phân phối thiết bị di động</small>
                    </div>
                </a> <!-- #branding -->

                <div class="right-section pull-right">
                    <a href="@Url.Action("Cart", "Giohang")" class="cart"><i class="icon-cart"></i> @ViewBag.SoLuongSP items in cart</a>
                    @*<a href="@Url.Action("Login", "DonVi")" class="login-button">Login/Register</a>*@
                    @if (Session["TenDV"] != null)
                    {
                        <a href="#" class="login-button">@Session["TenDV"].ToString()</a>
                        <a href="@Url.Action("Logout", "DonVi")" class="login-button">Logout</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "DonVi")" class="login-button">Login/Register</a>
                    }
                </div> <!-- .right-section -->

            </div> <!-- .container -->
        </div> <!-- .site-header -->

        @RenderBody();

        <div class="site-footer">


            <div class="colophon">
                <div class="copy">Designed by Nguyen.</div>
            </div> <!-- .colophon -->
        </div> <!-- .container -->
    </div> <!-- .site-footer -->
  

    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/app.js"></script>

</body>

</html>